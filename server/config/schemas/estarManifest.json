{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FDA eSTAR Package Manifest",
  "description": "Schema for validating eSTAR package structure and content",
  "type": "object",
  "required": ["packageInfo", "sections", "documents"],
  "properties": {
    "packageInfo": {
      "type": "object",
      "required": ["submissionType", "deviceName", "applicant", "contactPerson", "submissionDate"],
      "properties": {
        "submissionType": {
          "type": "string",
          "enum": ["Traditional", "Abbreviated", "Special"]
        },
        "deviceName": {
          "type": "string",
          "minLength": 1
        },
        "applicant": {
          "type": "string",
          "minLength": 1
        },
        "contactPerson": {
          "type": "object",
          "required": ["name", "title", "email", "phone"],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "title": {
              "type": "string",
              "minLength": 1
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": "string",
              "pattern": "^[0-9\\-\\(\\)\\s\\+]+$"
            }
          }
        },
        "submissionDate": {
          "type": "string",
          "format": "date"
        },
        "predicateDevice": {
          "type": "object",
          "required": ["name", "manufacturer", "kNumber"],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "manufacturer": {
              "type": "string",
              "minLength": 1
            },
            "kNumber": {
              "type": "string",
              "pattern": "^K[0-9]{6}$"
            }
          }
        }
      }
    },
    "sections": {
      "type": "array",
      "minItems": 13,
      "items": {
        "type": "object",
        "required": ["id", "title", "status", "content"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[A-Z0-9]+$"
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": ["notStarted", "inProgress", "completed", "approved"]
          },
          "content": {
            "type": "object"
          }
        }
      }
    },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "fileName", "fileType", "sectionId", "status"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "fileName": {
            "type": "string",
            "minLength": 1
          },
          "fileType": {
            "type": "string",
            "enum": ["pdf", "docx", "xlsx", "jpg", "png", "tiff"]
          },
          "sectionId": {
            "type": "string",
            "pattern": "^[A-Z0-9]+$"
          },
          "status": {
            "type": "string",
            "enum": ["uploaded", "pending", "verified", "rejected"]
          },
          "metadata": {
            "type": "object"
          }
        }
      }
    }
  }
}