# SagePlus Pipeline Configuration
# Copy this file to .env and fill in your API keys

# Hugging Face API Key (Required)
HF_API_KEY=your_huggingface_api_key_here

# MongoDB Connection URI (Optional - for database integration)
MONGODB_URI=mongodb://localhost:27017/

# LLM Model Settings
# Mixtral 8x7B Instruct (Default model for extraction)
HF_MODEL_URL=https://api-inference.huggingface.co/models/mistralai/Mixtral-8x7B-Instruct-v0.1

# Embedding Model Settings 
# all-MiniLM-L6-v2 (Default model for vectorization)
HF_EMBEDDING_URL=https://api-inference.huggingface.co/models/sentence-transformers/all-MiniLM-L6-v2

# Database Settings
DB_NAME=trialsage
CSR_COLLECTION=csr_reports
VECTOR_COLLECTION=csr_vectors

# Pipeline Settings
BATCH_SIZE=10
RATE_LIMIT_DELAY=2